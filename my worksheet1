  # Question 1
x = 24

if x % 24 == 0:
    print(x,"Is Even Number")
else:
    print(x, "Is Odd Number")


    # Question 3

temp = float(input("Enter temperature in Celsius: "))

if temp > 30:
    print(temp, "°C is Hot")
elif 15 <= temp <= 30:
    print(temp, "°C is Warm")
else:
    print(temp, "°C is Cold")

 #Question 4

score = int(input("Enter the score: "))

if 90 <= score <= 100:
    print(score, "is Grade A")
elif 80 <= score < 90:
    print(score, "is Grade B")
elif 70 <= score < 80:
    print(score, "is Grade C")
elif 60 <= score < 70:
    print(score, "is Grade D")
else:
    print(score, "is Grade F")


# Question 5

numbers = list(map(int, input("input the numbers separated by spaces: ").split()))
total = sum(numbers)

print("The sum of the list is:", total)

# Question 6

n = int(input("input a number: "))

print("The first 10 multiples of", n, "are:")
for i in range(1, 11):
    print(n * i)

# Question 7

s = input("input a string: ")

print("The reverse of the string is:", s[::-1])

# Question 8

string = input("Enter a string: ")
vowels = "aeiouAEIOU"
count = 0

for char in string:
    if char in vowels:
        count += 1

print("The number of vowels in the string is:", count)

# Question 9

n = int(input("Enter a number to start countdown: "))

while n > 0:
    print(n)
    n -= 1

# Question 10

import random

correct_number = random.randint(1, 100)
guess = None

while guess != correct_number:
    guess = int(input("Guess the number (between 1 and 100): "))

    if guess < correct_number:
        print("low!")
    elif guess > correct_number:
        print("high!")
    else:
        print("Congratulations!you get it!")

# Question 11

num = int(input("Enter a number to calculate factorial: "))
factorial = 1
i = 1

while i <= num:
    factorial *= i
    i += 1

print("The factorial of", num, "is:", factorial)


# Question 12

n = int(input("Enter how many numbers you want in Fibonacci sequence: "))
a, b = 0, 1
count = 0

while count < n:
    print(a, end=' ')
    a, b = b, a + b
    count += 1

# Question 13

string = input("Enter a string: ")
print("The string in uppercase is:", string.upper())

# Question 14

num = int(input("Enter a number to find its square: "))
print("The square of", num, "is:", num ** 2)

# Question 15

string = input("Enter a string: ")

if string == string[::-1]:
    print(string, "is a palindrome")
else:
    print(string, "is not a palindrome")

# Question 16

numbers = list(map(int, input("Enter numbers separated by spaces: ").split()))
print("The maximum number in the list is:", max(numbers))


